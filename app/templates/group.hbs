<div>

  <div class="col-xs-6">

    {{#if canEdit}}<button class="btn btn-default" style="float:right" data-toggle="modal" data-target="#editGroupModal">Edit group</button>{{/if}}

    <h1>{{name}} </h1>
    <p>{{description}}</p>

    <p>Group owner: <strong>{{owner.username}}</strong>
      <p>Members:</p>
      <ul>
        {{#each members}}
        <li>{{this.username}}</li>
        {{/each}}
      </ul>

      <h3>Posts</h3>
      <ul class="posts">
        {{#each posts}}
        <li class="post" id="post{{this.id}}" data-post="{{this.id}}">
          {{#if this.canEdit }}
          <a href="javascript:;" class="edit-post"><span class="glyphicon glyphicon-pencil" style="float:right"></span></a>          {{/if}}

          <strong>{{this.owner.username}}</strong>
          <div class="post-view">

            <p>{{this.message}}</p>
          </div>
          <div class="post-edit" style="display:none">
            <textarea class="form-control post-message" rows="2" cols="10">{{this.message}}</textarea>
            <button class="btn btn-primary save-post">Save changes</button>
            <button class="btn cancel-post">Cancel</button>
            <button class="btn btn-danger delete-post" style="float:right">Delete post</button>
          </div>
        </li>
        {{/each}}
      </ul>

      <textarea class="form-control" rows="2" cols="10" id="post-message" placeholder="Write a post here"></textarea>
      <button class=" btn btn-primary " id='add-post' style="margin-top:10px">Add post</button>
  </div>
  <div class="col-xs-6 ">
    <img src=' {{avatarUrl}} ' class="img img-responsive img-thumbnail "></img>
  </div>

  <!-- Modal -->
  <div id="editGroupModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Edit group</h4>
        </div>
        <form>
          <div class="modal-body">

            <div class="form-group">
              <label>Name</label>
              <input type="text" id="groupName" placeholder="Group name" class="form-control" value="{{name}}" />
            </div>
            <div class="form-group">
              <label>Description</label><textarea id="groupDescription" placeholder="Group description" class="form-control"
                rows="2" cols="10">{{description}}</textarea>
            </div>
            <div class="form-group">
              <label>Avatar URL</label><input type="text" id="groupAvatarUrl" placeholder="Group avatar URL" class="form-control"
                value="{{avatarUrl}}" />
            </div>
          </div>
          <div class="modal-footer">
            <input type="submit" class="btn btn-success" id='groupSubmit' data-dismiss="modal" value="Save changes" />
            <input type="reset" class="btn btn-default" />
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>

        </form>
      </div>

    </div>
  </div>
</div>