<form role="form" id="login-form">
  <h2>Edit profile</h2>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" placeholder="Username" value="{{username}}" class="form-control" readonly>
      </div>
      <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" id="email" value={{email}} class="form-control">
      </div>
    </div>
    <div class="col-sm-6">

      <img src="{{avatarUrl}}" style="height:200px" align="right" />
      <div class="form-group">
        <label for="avatarUrl">Avatar</label>
        <input type="url" id="avatarUrl" placeholder="Enter an URL for your avatar" value="{{avatarUrl}}" class="form-control" alt="Avatar not found">
      </div>
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea id="description" placeholder="Tell us something about yourself" rows="2" cols="10" class="form-control">{{description}}</textarea>
    </div>
    <div class="form-group">
      <label for="age">Age</label>
      <input type="number" id="age" value={{age}} min="18" max="99" class="form-control">
    </div>
    <div class="form-group">
      <label for="currentProject">Current Project</label>
      <input type="text" id="currentProject" placeholder="What project are you working on right now?" value="{{currentProject}}"
        class="form-control">
    </div>
    <div class="form-group">
      <label for="agency">Agency</label>
      <input type="text" id="agency" placeholder="Agency" value="{{agency}}" class="form-control">
    </div>

