<div>

  <div class="col-xs-6">


    <h1>{{name}} </h1>
    <p>{{description}}</p>

    <p>Group owner: <strong>{{owner.username}}</strong>
      <p>Members:</p>
      <ul>
        {{#each members}}
        <li>{{this.username}}</li>
        {{/each}}
      </ul>

      <h3>Posts</h3>
      <ul>
        {{#each posts}}
        <strong>{{this.owner.username}}</strong>
        <li>{{this.message}}</li>
        {{/each}}
      </ul>
  </div>
  <div class="col-xs-6">
    <img src='{{avatarUrl}}' class="img img-responsive img-thumbnail"></img>
  </div>
</div>